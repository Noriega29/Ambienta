@{
    ViewData["Title"] = "Noveno - Temario";
}

<style>
    p {
        margin: 0px;
    }
</style>

<div class="px-4 pb-4">
    <div class="row">
        <div class="col ps-3 mt-4">
            <h2 class="display-3">Noveno</h2>
            <p>Temario de noveno grado.</p>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        <!-- Card #1 -->
        <div class="col px-3">
            <div class="card card-temario h-100" style="max-height: 275px; overflow: hidden;">
                <!-- Ruta Controlador/Vista -->
                <a asp-controller="Noveno" asp-action="SintesisDeProteinas" class="no-subrayado" style="color: black;">
                    <!-- Card Image -->
                    <img src="@Url.Content("~/images/SintesisDeProteinas.png")" class="card-img-top" alt="SintesisDeProteinas.png">
                    <div class="card-body d-flex flex-column">
                        <div class="row">
                            <div class="col-12">
                                <!-- Card Title -->
                                <h6 class="card-title" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                    Síntesis de Proteínas
                                </h6>
                            </div>
                        </div>
                        <div class="row flex-grow-1">
                            <div class="col-12" style="flex: 1; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">
                                <!-- Card Text -->
                                <p>
                                    La síntesis de proteínas es un proceso por el cual las células...
                                </p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <!-- Card #2 -->
        <div class="col px-3">
            <div class="card card-temario h-100" style="max-height: 275px; overflow: hidden;">
                <!-- Ruta Controlador/Vista -->
                <a asp-controller="Noveno" asp-action="LeyesDeMendel" class="no-subrayado" style="color: black;">
                    <!-- Card Image -->
                    <img src="@Url.Content("~/images/Leyesdemendel.jpg")" class="card-img-top" alt="Leyesdemendel.jpg">
                    <div class="card-body d-flex flex-column">
                        <div class="row">
                            <div class="col-12">
                                <!-- Card Title -->
                                <h6 class="card-title" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                    Leyes de Mendel
                                </h6>
                            </div>
                        </div>
                        <div class="row flex-grow-1">
                            <div class="col-12" style="flex: 1; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">
                                <!-- Card Text -->
                                <p>
                                    Las leyes de Mendel son el conjunto de reglas básicas...
                                </p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
