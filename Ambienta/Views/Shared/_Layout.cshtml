<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ambienta.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-dark bg-dark fixed-top navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Ambienta</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"></li>
                    </ul>
                    
                    <div class="dropdown">
                        <button id="cursoSelector" class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Selecciona un curso
                        </button>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li><a class="dropdown-item" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li><a class="dropdown-item" asp-controller="Quinto" asp-action="Index">Quinto</a></li>
                            <li><a class="dropdown-item" asp-controller="Septimo" asp-action="Index">Séptimo</a></li>
                            <li><a class="dropdown-item" asp-controller="Noveno" asp-action="Index">Noveno</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <div id="container-body-page" class="container-fluid">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted fixed-bottom">
        <div class="container">
            &copy; 2024 - Ambienta
        </div>
    </footer>

    <div id="alert-test" class="alert alert-dismissible fade position-fixed d-none top-0 end-0" role="alert" style="z-index: 1050; margin: 64px 20px;">
        <span id="alert-test-response"></span>
        <button id="alert-test-btn-close" class="btn-close" type="button" aria-label="Close"></button>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
